#!/usr/bin/env ruby
# Frozen-string-literal: true
# Copyright: 2015 - 2016 Jordon Bedwell - Apache v2.0 License
# Encoding: utf-8

$LOAD_PATH.unshift(File.expand_path("../lib", __dir__))

trap :SIGINT do
  $stderr.puts Simple::Ansi.red("\nApparently that's all for now.")
  $stderr.puts Simple::Ansi.yellow("Bye bye and good luck in your future builds.")
  exit
end

# Time to play the game.
require "docker/template"
require "docker/template/interface"
Docker::Template::Interface \
  .start($PROGRAM_NAME)
